{
  "env": {
    "brow": true,
    "node": true
  },
  "parse": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "@typescript-eslint/tslint"],
  "rules": {
    "arrow-body-style": "off",
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this": "error",
    "complexity": [
      "error",
      {
        "max": 35
      }
    ],
    "constructor-super": "error",
    "curly": "error",
    "default-case": "error",
    "dot-notation": "off",
    "eol-last": "error",
    "max-lines": [
      "error",
      {
        "max": 1000,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "new-parens": "error",
    "newline-per-chained-call": "off",
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],
    "no-bitwise": "error",
    "no-caller": "error",
    "no-cond-assign": "error",
    "no-console": [
      "error",
      {
        "allow": ["debug", "log", "info", "time", "timeEnd", "trace"]
      }
    ],
    "no-debugger": "error",
    "no-duplicate-case": "error",
    "no-empty": "off",
    "no-empty-functions": "off",
    "no-eval": "error",
    "no-extra-bind": "error",
    "no-fallthrough": "error",
    "no-invalid-this": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-return-await": "error",
    "no-sequences": "error",
    "no-sparse-arrays": "error",
    "no-template-curly-in-string": "error",
    "no-throw-literal": "error",
    "no-undef-init": "error",
    "no-unsafe-finally": "error",
    "no-unused-labels": "error",
    "no-useless-constructor": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-const": "error",
    "prefer-object-spread": "error",
    "quote-props": ["error", "as-needed"],
    "radix": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never"
      }
    ],
    "use-isnan": "error",
    "yoda": "error",
    "@typescript-eslint/tslint/config": [
      "error",
      {
        "rules": {
          "align": [true, "elements", "members", "parameters", "statements"],
          "array-bracket-spacing": [true, "never"],
          "banana-in-box": true,
          "brace-style": [
            true,
            "1tbs",
            {
              "allowSingleLine": true
            }
          ],
          "comma-spacing": { "before": false, "after": true },
          "comment-format": [true, "check-space"],
          "component-class-suffix": true,
          "component-selector": [true, "element", "kairos", "kebab-case"],
          "contextual-life-cycle": true,
          "decorator-not-allowed": true,
          "directive-class-suffix": true,
          "directive-selector": [true, "attribute", "kairos", "camelCase"],
          "encoding": true,
          "i18n": [true, "check-id", "check-text"],
          "import-blacklist": true,
          "import-spacing": true,
          "jsdoc-format": [true, "check-multiline-start"],
          "max-inline-declarations": [
            true,
            {
              "template": 10
            }
          ],
          "max-line-length": [
            true,
            {
              "limit": 140,
              "ignore-pattern": "^import "
            }
          ],
          "no-attribute-parameter-decorator": true,
          "no-boolean-literal-compare": true,
          "no-conflicting-life-cycle-hooks": true,
          "no-default-export": true,
          "no-default-import": true,
          "no-duplicate-imports": true,
          "no-duplicate-variable": true,
          "no-dynamic-delete": true,
          "no-extra-boolean-cast": true,
          "no-extra-semi": true,
          "no-forward-ref": true,
          "no-implicit-dependencies": [true, "dev"],
          "no-input-rename": true,
          "no-life-cycle-call": true,
          "no-multi-spaces": true,
          "no-output-named-after-standard-event": true,
          "no-output-on-prefix": true,
          "no-output-rename": true,
          "no-queries-parameter": true,
          "no-redundant-jsdoc": true,
          "no-shadowed-variable": true,
          "no-template-call-expression": true,
          "no-trailing-whitespace": true,
          "no-unnecessary-callback-wrapper": true,
          "no-unused-css": true,
          "no-unused-expression": true,
          "no-void-expression": true,
          "number-literal-format": true,
          "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
          "only-arrow-functions": true,
          "pipe-impure": true,
          "prefer-method-signature": true,
          "prefer-output-readonly": true,
          "prefer-while": true,
          "quotemark": [true, "single"],
          "return-undefined": true,
          "require-await": true,
          "semicolon": [true, "always", "ignore-bound-class-methods"],
          "space-within-parens": true,
          "strict-boolean-expressions": [
            true,
            "allow-undefined-union",
            "allow-string",
            "allow-enum",
            "allow-number",
            "allow-mix"
          ],
          "template-conditional-complexity": true,
          "templates-no-negated-async": true,
          "ter-prefer-arrow-callback": true,
          "trackBy-function": true,
          "trailing-comma": [
            true,
            {
              "multiline": "always",
              "singleline": "never"
            }
          ],
          "triple-equals": [true, "allow-null-check"],
          "typedef": [true, "call-signature", "property-declaration"],
          "use-default-type-parameter": true,
          "use-host-property-decorator": true,
          "use-input-property-decorator": true,
          "use-life-cycle-interface": true,
          "use-output-property-decorator": true,
          "use-pipe-decorator": true,
          "use-pipe-transform-interface": true,
          "use-view-encapsulation": true,
          "variable-name": [true, "check-format", "allow-leading-underscore", "ban-keywords"],
          "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
          ],
          "prefer-template": ["error"],
          "no-useless-concat": ["error"]
        }
      }
    ]
  }
}

